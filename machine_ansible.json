{
    "builders":[{
        "type": "docker",
        "image": "ubuntu",
        "export_path": "image.tar"
    }],
    "provisioners":[
        {
            "type": "shell",
            "inline": [
                "apt-get -y update",
                "apt-get install -y software-properties-common",
                "apt-add-repository ppa:ansible/ansible",
                "apt-get install -y ansible"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "playbooks/docker.yml"
        }
    ],
    "post-processors": [
      [
        {
            "type": "docker-import",
            "repository": "macbeth76/packer-ansible",
            "tag": "latest"
        },
        {
            "type": "docker-push",
            "login": true,
            "login_username": "macbeth76",
            "login_password": "{{user `password`}}"
        }
      ]
    ]
}
