{
    "builders":[{
        "type": "docker",
        "image": "ubuntu:16.10",
        "export_path": "image.tar"
    }],
    "provisioners":[
        {
            "type": "shell",
            "inline": [
                "apt-get -y update",
                "apt-get install -y gcc build-essential libssl-dev libffi-dev python-dev python-pip",
                "pip install ansible"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "playbooks/local.yml"
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "kkarimi/packer-ansible",
            "tag": "0.1"
        }
    ]
}
